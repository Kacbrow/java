    }
    public static void sprawdzFormatDanych(String dane) throws NiepoprawnyFormatDanychException {
        if(!dane.matches("^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$")) throw new NiepoprawnyFormatDanychException();
    }
}

